{
  "manifest_version": 3,
  "name": "Focus Feed",
  "version": "2.0.0",
  "description": "Stop algorithmic rot across all major social media platforms",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.facebook.com/*",
    "*://*.instagram.com/*",
    "*://*.twitter.com/*",
    "*://*.x.com/*",
    "*://*.tiktok.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.facebook.com/*",
        "*://*.instagram.com/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*",
        "*://*.tiktok.com/*"
      ],
      "js": ["presets.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}
