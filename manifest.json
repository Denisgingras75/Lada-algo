{
  "manifest_version": 3,
  "name": "Focus Feed - Algorithm Trainer",
  "version": "7.0.0",
  "description": "Train social media algorithms to show educational content using AI-powered persona classification",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "windows"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.facebook.com/*",
    "*://*.instagram.com/*",
    "*://*.twitter.com/*",
    "*://*.x.com/*",
    "*://*.tiktok.com/*",
    "*://*.wikipedia.org/*",
    "*://*.reddit.com/*",
    "*://*.medium.com/*",
    "*://*.quora.com/*",
    "*://*.coursera.org/*",
    "*://*.edx.org/*",
    "*://*.khanacademy.org/*",
    "*://*.github.com/*",
    "*://*.stackoverflow.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.facebook.com/*",
        "*://*.instagram.com/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*",
        "*://*.tiktok.com/*"
      ],
      "js": ["content.js"], 
      "run_at": "document_end"
    }
  ]
}
